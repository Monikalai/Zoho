#include<stdio.h>
void main() {
int n,i,j,sp,val;
clrscr();
scanf("%d",&n);
sp=0,val=n-1;
for(i=0;i<n;i++) {
	for(j=0;j<sp;j++) {
	    printf(" ");
	}
	for(j=0;j<val;j++) {
	    printf("*");
	}
	if(i<(n/2)-1) {
	if(i==0) {
	   sp+=3;
	   val=val-2;
	}else if(val>(n/2)) {
	   sp+=2;
	   val=val-2;
	} else if(val==(n/2)) {
	    sp+=1;
	    val=val-2;
	} else {
	    val=val-2;
	}
	} else {
	if(i==(n/2)-1) {
	   sp-=2;
	   val=1;
	}else if(val<(n/2)) {
	   sp-=2;
	   val=val+2;
	} else {
	    val=val+2;
	}
       }
	printf("\n");
}
getch();
}
