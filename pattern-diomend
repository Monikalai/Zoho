#include<stdio.h>
void main() {
int sp,i,j,n,val;
clrscr();
scanf("%d",&n);
val=1;
sp=n-1;
for(i=0;i<n;i++)
{
 for(j=0;j<sp;j++) {
    printf(" ");
 }
 for(j=0;j<val;j++) {
    printf("* ");
 }
 printf("\n");
 val++;
 sp--;
}
val=n-1;
sp=1;
for(i=0;i<n-1;i++)
{
 for(j=0;j<sp;j++) {
    printf(" ");
 }
 for(j=0;j<val;j++) {
    printf("* ");
 }
 printf("\n");
 val--;
 sp++;
}
getch();
}
